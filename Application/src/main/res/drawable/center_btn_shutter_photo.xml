<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <stroke android:width="40dp" android:color="#00ff0000" />
            <corners android:radius="1000dp" />
            <gradient android:startColor="#2cffffff" android:centerColor="#2cffffff" android:endColor="#2cffffff" android:angle="90" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <stroke android:width="40dp" android:color="#00ff0000" />
            <corners android:radius="1000dp" />
            <gradient android:startColor="#78ffffff" android:centerColor="#78ffffff" android:endColor="#78ffffff" android:angle="90" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <stroke android:width="100dp" android:color="#0000ff00" />
            <corners android:radius="1000dp" />
            <gradient android:startColor="#ffffff" android:centerColor="#ffffff" android:endColor="#ffffff" android:angle="90" />
        </shape>
    </item>


</selector>




