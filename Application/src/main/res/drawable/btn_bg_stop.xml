<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <stroke android:width="1dp" android:color="#ffffff" />
            <corners android:radius="10000dp" />
            <gradient android:startColor="#da0d0d" android:centerColor="#da0d0d" android:endColor="#da0d0d" android:angle="90" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <stroke android:width="1dp" android:color="#ff0000" />
            <corners android:radius="10000dp" />
            <gradient android:startColor="#ff0000" android:centerColor="#ff0000" android:endColor="#ff0000" android:angle="90" />
        </shape>
    </item>
</selector>




